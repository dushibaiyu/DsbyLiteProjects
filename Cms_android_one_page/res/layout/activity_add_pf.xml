<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AddPfActivity" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/hello_world"
        android:textSize="46dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_marginRight="24dp"
        android:layout_marginTop="76dp"
        android:layout_toLeftOf="@+id/textView2"
        android:text="品番"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="46dp" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="24dp" >

        <Button
            android:id="@+id/but_pf_add"
            android:layout_width="254dp"
            android:layout_height="wrap_content"
            android:text="下载"
            android:textSize="46dp" />

        <Button
            android:id="@+id/but_pf_bac"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:text="返回"
            android:textSize="46dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignRight="@+id/editT_pf"
        android:layout_below="@+id/editT_pf"
        android:layout_marginTop="30dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="前面："
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="36dp" />

        <ImageView
            android:id="@+id/imageViewqm"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:src="@drawable/images" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="后面"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="36dp" />

        <ImageView
            android:id="@+id/imageViewhm"
            android:layout_width="match_parent"
            android:layout_height="223dp"
            android:src="@drawable/images" />
    </LinearLayout>

    <EditText
        android:id="@+id/editT_pf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignLeft="@+id/textView2"
        android:ems="10"
        android:textSize="46dp" 
        android:inputType="none"/>

</RelativeLayout>